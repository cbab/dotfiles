!
!    URxvt config
!

urxvt*perl-lib:        /usr/lib/urxvt/perl
urxvt*perl-ext-common: default,matcher,clipboard
urxvt*letterspace:     -1
!urxvt*transparent:    false
!urxvt*shading:        40
urxvt*scrollBar:       false
urxvt*font:            -*-terminus-medium-*-*-*-14-*-*-*-*-*-*-u
urxvt*boldFont:        -*-terminus-medium-*-*-*-14-*-*-*-*-*-*-u
urxvt*italicFont:      -*-terminus-medium-*-*-*-14-*-*-*-*-*-*-u
urxvt*bolditalicFont:  -*-terminus-medium-*-*-*-14-*-*-*-*-*-*-u
urxvt*cursorColor:     #98b9b1
urxvt*cursorBlink:     true

